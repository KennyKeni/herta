{
  "name": "herta",
  "version": "1.0.50",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "migrate:make": "bunx --bun kysely-ctl migrate:make --config .config/kysely.config.ts",
    "migrate:up": "bunx --bun kysely-ctl migrate:up --config .config/kysely.config.ts",
    "migrate:down": "bunx --bun kysely-ctl migrate:down --config .config/kysely.config.ts",
    "migrate:rollback": "bunx --bun kysely-ctl migrate:rollback --all --config .config/kysely.config.ts",
    "migrate:latest": "bunx --bun kysely-ctl migrate:latest --config .config/kysely.config.ts",
    "migrate:list": "bunx --bun kysely-ctl migrate:list --config .config/kysely.config.ts",
    "seed": "bun run src/infrastructure/db/seed/index.ts",
    "seed:clear": "bun run src/infrastructure/db/seed/clear.ts",
    "create-admin": "bun run scripts/create-admin.ts",
    "worker:outbox": "bun run src/workers/outbox-poller.ts",
    "worker:maintenance": "bun run src/workers/maintenance.ts",
    "codegen": "sh -c '. ./.env && DATABASE_URL=\"postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST:-localhost}:${POSTGRES_PORT:-5432}/${POSTGRES_DB}\" kysely-codegen --dialect postgres --out-file ./src/infrastructure/db/types.ts'",
    "check": "biome check src",
    "check:fix": "biome check --write src",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome format --write src",
    "format:check": "biome format src"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.966.0",
    "@aws-sdk/s3-request-presigner": "^3.966.0",
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/server-timing": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "@node-rs/argon2": "^2.0.2",
    "@tiptap/extension-table": "^3.15.3",
    "@tiptap/starter-kit": "^3.15.3",
    "@tiptap/static-renderer": "^3.15.3",
    "better-auth": "^1.4.10",
    "elysia": "latest",
    "ioredis": "^5.8.2",
    "kafkajs": "^2.2.4",
    "kysely": "^0.28.9",
    "kysely-ctl": "^0.20.0",
    "kysely-postgres-js": "^3.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@typescript/native-preview": "^7.0.0-dev.20251219.1",
    "bun-types": "latest",
    "kysely-codegen": "^0.19.0",
    "pg": "^8.16.3"
  },
  "module": "src/index.js"
}
