{
  "name": "herta",
  "version": "1.0.50",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun run --watch src/index.ts",
    "migrate:make": "bunx --bun kysely migrate:make --config .config/kysely.config.ts",
    "migrate:up": "bunx --bun kysely migrate:up --config .config/kysely.config.ts",
    "migrate:down": "bunx --bun kysely migrate:down --config .config/kysely.config.ts",
    "migrate:rollback": "bunx --bun kysely migrate:rollback --all --config .config/kysely.config.ts",
    "migrate:latest": "bunx --bun kysely migrate:latest --config .config/kysely.config.ts",
    "migrate:list": "bunx --bun kysely migrate:list --config .config/kysely.config.ts",
    "seed": "bun run src/infrastructure/db/seed/index.ts",
    "seed:clear": "bun run src/infrastructure/db/seed/clear.ts",
    "codegen": "sh -c '. ./.env && DATABASE_URL=\"postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST:-localhost}:${POSTGRES_PORT:-5432}/${POSTGRES_DB}\" kysely-codegen --dialect postgres --out-file ./src/infrastructure/db/types.ts'",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src"
  },
  "dependencies": {
    "elysia": "latest",
    "ioredis": "^5.8.2",
    "kafkajs": "^2.2.4",
    "kysely": "^0.28.9",
    "kysely-postgres-js": "^3.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript/native-preview": "^7.0.0-dev.20251219.1",
    "bun-types": "latest",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "kysely-codegen": "^0.19.0",
    "kysely-ctl": "^0.19.0",
    "pg": "^8.16.3",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.50.1"
  },
  "module": "src/index.js"
}
